<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="lab_robot">
	<xacro:property name="yaml_file" value="$(find LAB_2)/config/config.yaml" />
	<xacro:property name="params" value="${load_yaml(yaml_file)}" />
	
	<link name="base">
		<visual>
			<geometry>
				<cylinder length="0.6" radius="0.2" />
			</geometry>
		</visual>
	</link>
	<link name="link1">
		<visual>
			<geometry>
				<cylinder length="${params['a1']}" radius="0.2" />
			</geometry>
			<origin xyz="${.5*params['a1']} 0 0" rpy="0 1.57 0" />
		</visual>
	</link>
	<link name="link2">
		<visual>
			<geometry>
				<cylinder length="${params['a2']}" radius="0.2" />
			</geometry>
			<origin xyz="${.5*params['a2']} 0 0" rpy="0 1.57 0" />
		</visual>
	</link>
	<link name="manip">
		<visual>
			<geometry>
				<cylinder length="0.3" radius="0.1" />
			</geometry>
		</visual>
	</link>
	
	<joint name="joint1" type="continuous">
		<parent link="base" />
		<child link="link1" />
		<origin xyz="0 0 0" rpy="${params['joint1-rpy']}" />
		<axis xyz="0 0 1" />
	</joint>
	
	<joint name="joint2" type="continuous">
		<parent link="link1" />
		<child link="link2" />
		<origin xyz="${params['a1']} 0 0" rpy="${params['joint2-rpy']}" />
		<axis xyz="0 0 1" />
	</joint>
	
	<joint name="joint3" type="prismatic">
		<parent link="link2" />
		<child link="manip" />
		<origin xyz="${params['a2']} 0 0" rpy="${params['joint3-rpy']}" />
		<axis xyz="0 0 1" />
		<limit effort="5" velocity="5" lower="${-params['d3']}" upper="${params['d3']}" />
	</joint>
</robot>